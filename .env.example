# Environment variables for RAM blog + Supabase integration
# Copy this to .env.local in your RAM blog directory

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Optional: Supabase Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# RAM Blog Configuration
NEXT_PUBLIC_RAM_BLOG_URL=https://your-ram-blog.vercel.app

# Personal Logger Integration
PERSONAL_LOGGER_API_KEY=your-api-key-here

# Analytics Configuration
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_AI_INSIGHTS=true

# Security
CORS_ORIGINS=http://localhost:3000,https://your-ram-blog.vercel.app
